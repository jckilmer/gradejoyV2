<% provide(:title, @course.name) %>

<h2 class="course-title" id="course-name"><%= @course.name %></h2>
<h2 id="course-name-change" class="course-title"></h2>

<%= link_to 'Edit Course', edit_course_path(@course), class: "btn btn-primary qa-edit-course", id: "edit-course", remote: true %>

<%= link_to 'Delete Course', course_path, method: :delete, data: { confirm: 'Are you sure you want to delete this course?' }, class: "btn btn-danger space-left qa-delete-course" %> <br /><br />

<div id="updated-course"></div>

<div id="course-form"></div>

<h3>Enrolled Students</h3>

<%= render 'main_table' %>

<%= link_to "Create New Assignment", new_course_assignment_path(@course), class: "btn btn-warning qa-create-assignment space-top-bottom qa-create-assignment", remote: true %><br />

<div id="create-assignment-form"></div>

<%= link_to 'Back to Courses List', courses_path, class: "btn btn-primary qa-back-to-courses-list space-top" %>
