<div class="table-responsive" id="courses-table">
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>Course Name</th>
        <th>Course ID</th>
        <th>Time</th>
        <th>Period</th>
        <th>Section</th>
        <th>Created</th>
        <th>Number of Students</th>
      </tr>
    </thead>

    <tbody id="courses_table">
      <% @courses.each do |course| %>
      <tr>
        <td><%= link_to course.name, course, class: "qa-course-#{course.id}" %></td>
        <td><%= course.id %></td>
        <td><%= course.time.strftime("%I:%M %p") %></td>
        <td><%= course.period %></td>
        <td><%= course.section %></td>
        <td><%= course.created_at.strftime("%A, %B %d, %Y, at %I:%M %p") %></td>
        <td><%= course.students.all.count %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
